---
import { Anchor } from "~/components/Anchor";
import BodyContents from "~/components/BodyContents.astro";
import HeroTertiary from "~/components/HeroTertiary.astro";
import { Text } from "~/components/Text";
import HeroLayout from "../layouts/HeroLayout.astro";
import ProjectCard from "../components/ProjectCard.astro";
import tekaImage from "~/assets/teka.png";

const description = "Explore my portfolio of projects";
const introText = "I work on various projects ranging from mobile apps to web frameworks and dev tools. Each project represents a unique challenge and learning opportunity, showcasing my skills in different technologies and problem-solving approaches.";

const projects = [
  {
    title: "Feedback System",
    description: "A comprehensive feedback collection and management system for gathering user insights and improving products.",
    url: "https://new-feedback-greysilicon-com.vercel.app/",
    tags: ["React", "Node.js", "MongoDB"]
  },
  {
    title: "Agri-Link",
    description: "Connecting farmers with markets and resources to improve agricultural productivity and sustainability.",
    url: "https://agri-link-beta.vercel.app/",
    tags: ["Next.js", "Firebase", "Tailwind CSS"]
  },
  {
    title: "iCare Foundation",
    description: "A platform dedicated to supporting charitable causes and making a positive impact in communities.",
    url: "https://icare-foundation.vercel.app/",
    tags: ["React", "Node.js", "PostgreSQL"]
  },
  {
    title: "Ustawi Path",
    description: "An educational platform providing learning resources and career guidance for students.",
    url: "https://ustawi-path.vercel.app/",
    tags: ["Vue.js", "Express", "MongoDB"]
  },
  {
    title: "Build Connect KE",
    description: "A networking platform for construction professionals and service providers in Kenya.",
    url: "https://build-connect-ke.vercel.app/",
    tags: ["React", "Firebase", "Material-UI"]
  }
];

// Group projects into rows of 2 for larger screens
const projectRows = [];
for (let i = 0; i < projects.length; i += 2) {
  projectRows.push(projects.slice(i, i + 2));
}
---

<HeroLayout
	alt="Projects banner showing various code and app interfaces"
	description={description}
	images={{
		dark: tekaImage,
		light: tekaImage
	}}
	primary="Projects"
	title="Projects"
>
	<Fragment slot="secondary">
		I am a full time mad scientist - experimenting with random stuff
	</Fragment>
	<HeroTertiary slot="tertiary">
		Find all these on my <Anchor
			href="https://github.com/Peaceteka"
			target="_blank"
		>
			GitHub profile
		</Anchor>.
	</HeroTertiary>

	<BodyContents>
		<div class="max-w-4xl mx-auto text-center mb-16">
			<Text as="h2" class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-6">
				My Projects
			</Text>
			<Text as="p" class="text-lg text-gray-600 dark:text-gray-300 mb-8 leading-relaxed">
				{introText}
			</Text>
		</div>

		<div class="space-y-16">
			{projectRows.map((row, rowIndex) => (
				<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
					{row.map((project, index) => (
						<div class={`transition-all duration-300 ${index % 2 === 0 ? 'md:translate-y-8' : ''}`}>
							<ProjectCard project={project} />
						</div>
					))}
				</div>
			))}
		</div>

		<div class="mt-16 text-center">
			<Text as="p" class="text-gray-500 dark:text-gray-400 mb-6">
				Interested in seeing more of my work?
			</Text>
			<a 
				href="https://github.com/Peaceteka" 
				target="_blank" 
				rel="noopener noreferrer"
				class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors"
			>
				<svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
					<path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
				</svg>
				View on GitHub
			</a>
		</div>
	</BodyContents>
</HeroLayout>
