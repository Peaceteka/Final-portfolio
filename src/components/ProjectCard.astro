---
import { Anchor } from "./Anchor";
import { Text } from "./Text";

export interface Project {
  title: string;
  description: string;
  url: string;
  image?: string;
  tags?: string[];
}

const { project } = Astro.props as { project: Project };

// Default tags if none provided
const defaultTags = ['Web App', 'Full Stack'];
const tags = project.tags || defaultTags;
---

<article class="group relative flex flex-col h-full overflow-hidden rounded-2xl bg-white dark:bg-gray-800 shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
  {/* Project Image */}
  {project.image ? (
    <div class="relative h-48 overflow-hidden">
      <img 
        src={project.image} 
        alt={`Screenshot of ${project.title}`}
        class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
        loading="lazy"
        width={400}
        height={200}
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end p-4">
        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-100">
          Visit Project
        </span>
      </div>
    </div>
  ) : (
    <div class="h-48 bg-gradient-to-br from-blue-500 to-indigo-600 flex items-center justify-center">
      <span class="text-4xl font-bold text-white opacity-20">{project.title.charAt(0)}</span>
    </div>
  )}

  {/* Project Content */}
  <div class="flex-1 p-6 flex flex-col">
    <div class="flex-1">
      <Text 
        as="h3" 
        fontSize="large" 
        fontWeight="semibold" 
        class="mb-2 text-gray-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors"
      >
        {project.title}
      </Text>
      <Text as="p" class="text-gray-600 dark:text-gray-300 mb-4">
        {project.description}
      </Text>
    </div>

    {/* Tags */}
    <div class="mt-4 flex flex-wrap gap-2">
      {tags.map(tag => (
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900/50 dark:text-blue-300">
          {tag}
        </span>
      ))}
    </div>
  </div>

  {/* Clickable Overlay */}
  <a 
    href={project.url} 
    target="_blank" 
    rel="noopener noreferrer" 
    class="absolute inset-0 z-10"
    aria-label={`View ${project.title} project`}
  ></a>
</article>
