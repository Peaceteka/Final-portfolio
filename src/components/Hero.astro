---
import HeroImage, { type HeroImages } from "./HeroImage.astro";
import HeroTitle from "./HeroTitle.astro";

interface Props {
	alt: string;
	class?: string | undefined;
	images: HeroImages;
	primary: string;
}
---

<div class:list={["hero", Astro.props.class]}>
	<div class="hero-content">
		<div class="hero-image-container">
			<HeroImage alt={Astro.props.alt} size="large" src={Astro.props.images} />
		</div>
		<div class="hero-text">
			<HeroTitle>
				{Astro.props.primary}
			</HeroTitle>
			<slot />
		</div>
	</div>
</div>

<style>
	.hero {
		width: 100%;
		margin: 2rem auto;
		padding: 0 var(--widthPagePadding);
	}

	.hero-content {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 2rem;
		max-width: var(--widthFull);
		margin: 0 auto;
	}

	.hero-image-container {
		width: 200px;
		height: 200px;
		margin: 0 auto 1.5rem;
	}

	.hero-text {
		text-align: center;
		width: 100%;
	}

	@media (min-width: 640px) {
		.hero {
			margin: 3rem auto;
		}

		.hero-image-container {
			width: 250px;
			height: 250px;
		}
	}

	@media (min-width: 768px) {
		.hero {
			margin: 4rem auto;
		}

		.hero-content {
			flex-direction: row;
			align-items: center;
			justify-content: center;
			gap: 4rem;
		}

		.hero-image-container {
			flex: 0 0 auto;
			margin: 0;
		}

		.hero-text {
			text-align: left;
			flex: 1;
		}
	}

	@media (min-width: 1024px) {
		.hero {
			margin: 6rem auto;
		}

		.hero-content {
			gap: 6rem;
		}

		.hero-image-container {
			width: 300px;
			height: 300px;
		}
	}
</style>
